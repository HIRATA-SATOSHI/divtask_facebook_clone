<p id="notice"><%= notice %></p>

<h1>Users</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><button type="button" class="btn btn-secondary"><%= link_to 'Show', user %></button></td>
        <td><button type="button" class="btn btn-secondary"><%= link_to 'Edit', edit_user_path(user) %></button></td>
        <td><button type="button" class="btn btn-outline-danger"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-info"><%= link_to 'New User', new_user_path %></button>
